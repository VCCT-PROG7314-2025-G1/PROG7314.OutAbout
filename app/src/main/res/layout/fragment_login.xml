<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:background="#12372A"
    android:orientation="vertical"
    tools:context=".LandingFragment">

    <Space
        android:layout_width="match_parent"
        android:layout_height="56dp" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="89dp"
        android:layout_height="76dp"
        app:srcCompat="@drawable/icon" />

    <!-- Login Title -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#FBFADA"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Username -->
    <TextView
        android:id="@+id/username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Username"
        android:textColor="#FBFADA"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/username_txtbox"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Username"
        android:padding="16dp"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#12372A" />

    <!-- Password -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Password"
        android:textColor="#FBFADA"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/password_txtbox"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="#12372A" />

    <!-- Forgot Password Button -->
    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/montserrat"
        android:text="FORGOT_PASSWORD?"
        android:textColor="#FBFADA"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Login Button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="210dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@null"
        android:fontFamily="@font/montserrat"
        android:padding="14dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#FBFADA"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- Login SSO Button -->
    <Button
        android:id="@+id/btnGoogleSignIn"
        android:layout_width="230dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@null"
        android:fontFamily="@font/montserrat"
        android:padding="14dp"
        android:text="Login with Google"
        android:textAllCaps="false"
        android:textColor="#FBFADA"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/orText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="OR"
        android:textColor="#FBFADA"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- Biometrics Button -->
    <Button
        android:id="@+id/biometricsButton"
        android:layout_width="210dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@null"
        android:fontFamily="@font/montserrat"
        android:padding="14dp"
        android:text="Biometrics"
        android:textAllCaps="false"
        android:textColor="#FBFADA"
        android:textSize="18sp" />

</LinearLayout>