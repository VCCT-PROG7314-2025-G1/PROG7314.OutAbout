<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12372A"
    tools:context=".FoodDrinkFragment">

    <!-- Header: Location icon + dropdown pill -->
    <LinearLayout
        android:id="@+id/location_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Location Icon -->
        <ImageView
            android:id="@+id/ic_location"
            android:layout_width="90dp"
            android:layout_height="82dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <!-- White Rounded Background with Text inside -->
        <RelativeLayout
            android:layout_width="252dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_rounded_white"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="45dp"
                android:layout_toStartOf="@id/ic_dropdown_icon"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat"
                android:maxLines="1"
                android:text="Cape Town"
                android:textColor="#436850"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ic_dropdown_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_dropdown" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/food_drink_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food &amp; Drink"
        android:textColor="#FBFADA"
        android:textSize="30sp"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/location_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scrollable restaurant list (static sample cards) -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:src="@android:drawable/ic_menu_revert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FBFADA" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/food_drink_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="24dp">

            <!-- Restaurant Card 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/restaurant_image_1"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginBottom="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_bootlegger"
                        app:shapeAppearanceOverlay="@style/RoundedImage" />

                    <TextView
                        android:id="@+id/restaurant_title_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/restaurant_image_1"
                        android:layout_marginEnd="40dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Bootlegger Rosmead"
                        android:textColor="#12372A"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/restaurant_fav_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/restaurant_image_1"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_favorite_border" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Restaurant Card 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/restaurant_image_2"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginBottom="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_sea_breeze_fish_shell"
                        app:shapeAppearanceOverlay="@style/RoundedImage" />

                    <TextView
                        android:id="@+id/restaurant_title_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/restaurant_image_2"
                        android:layout_marginEnd="40dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Sea Breeze Fish Shell"
                        android:textColor="#12372A"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/restaurant_fav_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/restaurant_image_2"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_favorite_border" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Restaurant Card 3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/restaurant_image_3"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginBottom="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_truth_coffee"
                        app:shapeAppearanceOverlay="@style/RoundedImage" />

                    <TextView
                        android:id="@+id/restaurant_title_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/restaurant_image_3"
                        android:layout_marginEnd="40dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Truth Coffee Roasting"
                        android:textColor="#12372A"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/restaurant_fav_3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/restaurant_image_3"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_favorite_border" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

