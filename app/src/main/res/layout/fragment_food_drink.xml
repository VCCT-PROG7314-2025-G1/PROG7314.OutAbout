    <!-- Header: Location icon + dropdown pill -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            app:tint="#FBFADA"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_marginEnd="16dp"/>

        <!-- Location icon + dropdown pill -->
        <LinearLayout
            android:id="@+id/location_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <!-- Location Icon -->
            <ImageView
                android:id="@+id/ic_location"
                android:layout_width="90dp"
                android:layout_height="82dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/icon"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <!-- White Rounded Background with Text inside -->
            <RelativeLayout
                android:layout_width="223dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_rounded_white"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="45dp"
                    android:layout_toStartOf="@id/ic_dropdown_icon"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat"
                    android:maxLines="1"
                    android:text="Cape Town"
                    android:textColor="#436850"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/ic_dropdown_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_dropdown" />
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="1" />
    <!-- Title -->
    <TextView
        android:id="@+id/food_drink_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Food &amp; Drink"
        android:textColor="#FBFADA"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

