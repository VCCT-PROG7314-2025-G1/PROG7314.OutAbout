<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12372A"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".LandingFragment">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <Space
            android:layout_width="match_parent"
            android:layout_height="54dp" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="89dp"
            android:layout_height="76dp"
            android:layout_gravity="start"
            app:srcCompat="@drawable/icon" />

        <TextView
            android:id="@+id/register_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Register"
            android:textColor="#FBFADA"
            android:textSize="24sp"
            android:textStyle="bold" />



        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!-- Name -->
        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Name"
            android:textColor="#FBFADA"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/name_txtbox"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Name"
            android:padding="14dp"
            android:textColor="#12372A"
            android:textColorHint="#436850" />

        <Space android:layout_width="match_parent" android:layout_height="20dp" />

        <!-- Surname -->
        <TextView
            android:id="@+id/surname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Surname"
            android:textColor="#FBFADA"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/surname_txtbox"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Surname"
            android:padding="14dp"
            android:textColor="#12372A"
            android:textColorHint="#436850" />

        <Space android:layout_width="match_parent" android:layout_height="20dp" />

        <!-- Number -->
        <TextView
            android:id="@+id/mobile_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Mobile Number"
            android:textColor="#FBFADA"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/number_txtbox"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Number"
            android:padding="14dp"
            android:textColor="#12372A"
            android:textColorHint="#436850" />

        <!-- Email -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Email"
            android:textColor="#FBFADA"
            android:textColorLink="#FBFADA"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/email_txtbox"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Email"
            android:padding="14dp"
            android:textColor="#12372A"
            android:textColorHint="#436850" />

        <Space android:layout_width="match_parent" android:layout_height="20dp" />



        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/profile_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Create a Profile"
            android:textColor="#FBFADA"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/country_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Choose a Country"
            android:textColor="#FBFADA"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/country_txtbox"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Country"
            android:padding="14dp"
            android:textColor="#12372A"
            android:textColorHint="#6E79BA" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/username_txt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center|center_vertical"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Create a Username"
            android:textColor="#FBFADA"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/usernameInput"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Username"
            android:importantForAutofill="no"
            android:padding="14dp"
            android:textColor="#12372A"
            android:textColorHint="#436850" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Create a Password"
            android:textColor="#FBFADA"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Password"
            android:padding="14dp"
            android:textColor="#12372A"
            android:textColorHint="#436850" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <!-- Profile Photo Upload Section -->
        <TextView
            android:id="@+id/photo_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Upload Profile Photo"
            android:textColor="#FBFADA"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_edittext"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person_placeholder" />

        <Button
            android:id="@+id/uploadBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="10dp"
            android:text="Choose Photo"
            android:textAllCaps="false"
            android:textColor="#DBD4D7" />

        <!-- Progress bar goes right under the "Register" title -->
        <ProgressBar
            android:id="@+id/registerProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="12dp"
            android:max="7"
            android:progress="0"
            android:progressTint="#76ABAE"
            android:backgroundTint="#436850" />

        <!-- Create A Profile Button -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/profileButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="14dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#DBD4D7" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />
    </LinearLayout>
</ScrollView>