<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12372A"
    tools:context=".HomeFragment">

    <!-- Location Dropdown -->
    <LinearLayout
        android:id="@+id/location_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Location Icon -->
        <ImageView
            android:id="@+id/ic_location"
            android:layout_width="90dp"
            android:layout_height="82dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_location"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <!-- White Rounded Background with Text inside -->
        <RelativeLayout
            android:layout_width="252dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_rounded_white"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="45dp"
                android:layout_toStartOf="@id/ic_dropdown_icon"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_regular"
                android:maxLines="1"
                android:text="Cape Town"
                android:textColor="#436850"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ic_dropdown_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_dropdown" />
        </RelativeLayout>
    </LinearLayout>


    <!-- Categories Title -->
    <TextView
        android:id="@+id/categories_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textColor="#FBFADA"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/location_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>


    <!-- Categories Buttons -->

    <GridLayout
        android:id="@+id/categories_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categories_title">

        <!-- Button 1 -->
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#436850"
            android:fontFamily="@font/montserrat_regular"
            android:lineHeight="20sp"
            android:paddingStart="4dp"
            android:paddingTop="10dp"
            android:paddingEnd="4dp"
            android:paddingBottom="10dp"
            android:text="Food &amp; Drink"
            android:textColor="#FBFADA"
            android:textSize="16sp"
            app:cornerRadius="50dp"
            app:strokeWidth="0dp" />

        <!-- Button 2 -->
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#436850"
            android:fontFamily="@font/montserrat_regular"
            android:lineHeight="20sp"
            android:paddingStart="4dp"
            android:paddingTop="10dp"
            android:paddingEnd="4dp"
            android:paddingBottom="10dp"
            android:text="Things to do"
            android:textColor="#FBFADA"
            android:textSize="16sp"
            app:cornerRadius="50dp"
            app:strokeWidth="0dp" />

        <!-- Button 3 -->
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#436850"
            android:fontFamily="@font/montserrat_regular"
            android:lineHeight="20sp"
            android:paddingStart="4dp"
            android:paddingTop="10dp"
            android:paddingEnd="4dp"
            android:paddingBottom="10dp"
            android:text="Shopping"
            android:textColor="#FBFADA"
            android:textSize="16sp"
            app:cornerRadius="50dp"
            app:strokeWidth="0dp" />

        <!-- Button 4 -->
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#436850"
            android:fontFamily="@font/montserrat_regular"
            android:lineHeight="20sp"
            android:paddingStart="4dp"
            android:paddingTop="10dp"
            android:paddingEnd="4dp"
            android:paddingBottom="10dp"
            android:text="Services"
            android:textColor="#FBFADA"
            android:textSize="16sp"
            app:cornerRadius="50dp"
            app:strokeWidth="0dp" />

    </GridLayout>

    <!-- Top 5 Picks Title -->

    <!-- Activity Card View -->
    <TextView
        android:id="@+id/top_picks_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Top 5 Picks"
        android:textColor="#FBFADA"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categories_grid" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_example"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="80dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/top_picks_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"> <!-- white space inside card -->

            <!-- Image inside card with white padding around -->

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_bus"
                app:shapeAppearanceOverlay="@style/RoundedImage" />

            <!-- Title text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Hop-On Hop-Off Bus Tour with Optional Cruise"
                android:textColor="#12372A"
                android:textSize="16sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="412dp"
        android:layout_height="66dp"
        android:background="#12372A"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextAppearanceActive="@style/BottomNavTextAppearance"
        app:itemTextAppearanceInactive="@style/BottomNavTextAppearance"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>
