<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12372A"
    tools:context=".BrowseByCategoryFragment">

    <!-- Header: Back button + App Logo -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="69dp"
            android:layout_height="68dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="#FBFADA" />

        <!-- App Logo -->
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="297dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:src="@drawable/ic_location" />
    </LinearLayout>

    <!-- Page title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse by Category"
        android:textColor="#FBFADA"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scrollable categories grid -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Row 1: Food & Drink, Shopping -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_food_drink"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#436850"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Food &amp; Drink"
                    android:textColor="#FBFADA"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_shopping"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#436850"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Shopping"
                    android:textColor="#FBFADA"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeWidth="0dp" />
            </LinearLayout>

            <!-- Row 2: Services, Attractions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_services"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#436850"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Services"
                    android:textColor="#FBFADA"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_attractions"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#436850"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Attractions"
                    android:textColor="#FBFADA"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeWidth="0dp" />
            </LinearLayout>

            <!-- Row 3: Hotels, Gas Stations -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_hotels"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#436850"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Hotels"
                    android:textColor="#FBFADA"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_gas_stations"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#436850"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Gas Stations"
                    android:textColor="#FBFADA"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeWidth="0dp" />
            </LinearLayout>

            <!-- Row 4: Banks, Pharmacies -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_banks"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#436850"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Banks"
                    android:textColor="#FBFADA"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_pharmacies"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#436850"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Pharmacies"
                    android:textColor="#FBFADA"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeWidth="0dp" />
            </LinearLayout>

            <!-- Row 5: Hospitals, Car Repair -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_hospitals"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#436850"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Hospitals"
                    android:textColor="#FBFADA"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_car_repair"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#436850"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Car Repair"
                    android:textColor="#FBFADA"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeWidth="0dp" />
            </LinearLayout>

            <!-- Row 6: Grocery Stores, Entertainment -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_grocery_stores"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#436850"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Grocery Stores"
                    android:textColor="#FBFADA"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_entertainment"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#436850"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Entertainment"
                    android:textColor="#FBFADA"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeWidth="0dp" />
            </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.core.widget.NestedScrollView>

    <!-- Navigation Bar DO NOT TOUCH THIS CODE -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#12372A"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>


