<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12372A"
    tools:context=".BrowseByCategoryFragment">

    <!-- Location Dropdown -->
    <include
        android:id="@+id/location_dropdown3"
        layout="@layout/view_location_dropdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <!-- Page title -->
    <TextView
        android:id="@+id/categories_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Browse by Category"
        android:textColor="#FBFADA"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/location_dropdown3"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Grid of categories -->

    <GridLayout
        android:id="@+id/categories_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:columnCount="2"
        android:rowCount="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categories_title">

        <!-- Food & Drink -->
        <Button
            android:id="@+id/btn_food_drink"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/montserrat"
            android:padding="14dp"
            android:text="Food &amp; Drink"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FBFADA"
            android:textSize="16sp" />

        <!-- Shopping -->
        <Button
            android:id="@+id/btn_shopping"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/montserrat"
            android:padding="14dp"
            android:text="Shopping"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FBFADA"
            android:textSize="16sp" />

        <!-- Services -->
        <Button
            android:id="@+id/btn_services"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/montserrat"
            android:padding="14dp"
            android:text="Services"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FBFADA"
            android:textSize="16sp" />

        <!-- Attractions -->
        <Button
            android:id="@+id/btn_attractions"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/montserrat"
            android:padding="14dp"
            android:text="Attractions"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FBFADA"
            android:textSize="16sp" />

        <!-- Hotels -->
        <Button
            android:id="@+id/btn_hotels"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/montserrat"
            android:padding="14dp"
            android:text="Hotels"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FBFADA"
            android:textSize="16sp" />

        <!-- Gas Stations -->
        <Button
            android:id="@+id/btn_gas_stations"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/montserrat"
            android:padding="14dp"
            android:text="Gas Stations"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FBFADA"
            android:textSize="16sp" />

        <!-- Banks -->
        <Button
            android:id="@+id/btn_banks"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/montserrat"
            android:padding="14dp"
            android:text="Banks"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FBFADA"
            android:textSize="16sp" />

        <!-- Pharmacies -->
        <Button
            android:id="@+id/btn_pharmacies"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/montserrat"
            android:padding="14dp"
            android:text="Pharmacies"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FBFADA"
            android:textSize="16sp" />

        <!-- Hospitals -->
        <Button
            android:id="@+id/btn_hospitals"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/montserrat"
            android:padding="14dp"
            android:text="Hospitals"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FBFADA"
            android:textSize="16sp" />

        <!-- Car Repair -->
        <Button
            android:id="@+id/btn_car_repair"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/montserrat"
            android:padding="14dp"
            android:text="Car Repair"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FBFADA"
            android:textSize="16sp" />

        <!-- Grocery Stores -->
        <Button
            android:id="@+id/btn_grocery_stores"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/montserrat"
            android:padding="14dp"
            android:text="Grocery Stores"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FBFADA"
            android:textSize="16sp" />

        <!-- Entertainment -->
        <Button
            android:id="@+id/btn_entertainment"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/montserrat"
            android:padding="14dp"
            android:text="Entertainment"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FBFADA"
            android:textSize="15sp" />

    </GridLayout>

    <!-- Back button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="552dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:src="@android:drawable/ic_menu_revert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_dropdown3"
        app:tint="#FBFADA" />

    <!-- Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#12372A"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:itemTextAppearanceActive="@style/BottomNavTextAppearance"
        app:itemTextAppearanceInactive="@style/BottomNavTextAppearance"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>