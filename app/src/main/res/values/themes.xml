<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.PROG7314OutAbout" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">#12372A</item>
        <item name="colorOnPrimary">#FBFADA</item>
        <item name="colorPrimaryContainer">#436850</item>
        <item name="colorOnPrimaryContainer">#FBFADA</item>

        <!-- Status bar / window background -->
        <item name="android:windowBackground">#12372A</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- App theme that inherits from base -->
    <style name="Theme.PROG7314OutAbout" parent="Base.Theme.PROG7314OutAbout" />

    <!-- Rounded Image style -->
    <style name="RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Bottom nav text appearance -->
    <style name="BottomNavTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FBFADA</item>
    </style>


</resources>
